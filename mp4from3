#!/usr/bin/perl
use 5.018 ; use strict ; use warnings ; 
use feature qw[say] ;
use File::Temp ; 
use Getopt::Std ; getopts 'a:d:ln', \my %o ; 
use Term::ANSIColor ':constants' ; $Term::ANSIColor::AUTORESET = 1 ;
my $mp3filepat = $o{a} // '*.mp3' ; 
my @mp3files = grep { chomp ; $_ ne q[] } glob $mp3filepat ;
my $N = $o{n} ? "\\\n" : '' ; # 生成するコマンド文の途中に '\'の後に改行文字を、挿入するため。

# 一時ファイルである 2x2 の画像ファイル のjpg形式ファイルを作る。
my $tmpfile = File::Temp -> new ( UNLINK => 1 , suffix => '.jpg') ; 
#say $tmpfile ; 
my $trs = q[ffd8ffe000104a46494600010100000100010000ffed003850686f746f73
686f7020332e30003842494d04040000000000003842494d0425000000000010d41d8
cd98f00b204e9800998ecf8427effe202204943435f50524f46494c45000101000002
